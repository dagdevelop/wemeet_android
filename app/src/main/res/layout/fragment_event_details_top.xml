<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <data>
        <variable
            name="eventDetailsViewModel"
            type="com.dagdevelop.wemeet.dataAccess.viewModel.EventDetailsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.EventDetailsMenuFragment"
        android:background="@color/default_color">

        <TextView
            android:id="@+id/event_details_menu_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{eventDetailsViewModel.event.cityName}"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:textColor="@color/white"
            android:background="@color/default_color"
            android:gravity="center"
            android:minHeight="50dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/event_details_menu_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{eventDetailsViewModel.event.description}"
            android:gravity="center"
            android:textAlignment="center"
            android:minHeight="100dp"
            android:background="@color/white"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            app:layout_constraintTop_toBottomOf="@+id/event_details_menu_title" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="3dp"
            app:layout_constraintTop_toBottomOf="@+id/event_details_menu_description"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
