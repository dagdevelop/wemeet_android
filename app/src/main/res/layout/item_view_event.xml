<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="date"
            type="String" />
        <variable
            name="title"
            type="String" />
        <variable
            name="description"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/item_view_event_top_divider"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="5dp"
            android:background="@color/default_color"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_view_event_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:text="@string/recycler_view_event_date_text"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_view_event_top_divider" />

        <TextView
            android:id="@+id/item_view_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/recycler_view_event_title_text"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/item_view_event_date_text"
            app:layout_constraintTop_toBottomOf="@id/item_view_event_date_text" />

        <TextView
            android:id="@+id/item_view_event_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:text="@string/recycler_view_event_description_text"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_view_event_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>