<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/defaultStyle"
    tools:context=".dataAccess.MainActivity">
    <!-- DISPLAY USER -->

    <TextView
        android:id="@+id/singleUserView"
        android:text="USER AFFICHE ICI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- DISPLAY USER -->

    <Button
        android:id="@+id/eventDetailsActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TO_EVENT_ACTIVITY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/singleUserView"
        app:layout_constraintVertical_bias="0.434" />

    <androidx.fragment.app.FragmentContainerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout="@layout/fragment_bottom_menu_layout"/>

</androidx.constraintlayout.widget.ConstraintLayout>